<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shopmanagement.biz.mapper.BizNotificationsMapper">
    
    <resultMap type="BizNotifications" id="BizNotificationsResult">
        <result property="id"    column="id"    />
        <result property="tenantId"    column="tenant_id"    />
        <result property="employeeId"    column="employee_id"    />
        <result property="message"    column="message"    />
        <result property="sentDate"    column="sent_date"    />
        <result property="createdBy"    column="created_by"    />
        <result property="createdTime"    column="created_time"    />
        <result property="lastModifiedBy"    column="last_modified_by"    />
        <result property="lastModifiedTime"    column="last_modified_time"    />
    </resultMap>

    <sql id="selectBizNotificationsVo">
        select id, tenant_id, employee_id, message, sent_date, created_by, created_time, last_modified_by, last_modified_time from biz_notifications
    </sql>

    <select id="selectBizNotificationsList" parameterType="BizNotifications" resultMap="BizNotificationsResult">
        <include refid="selectBizNotificationsVo"/>
        <where>  
            <if test="tenantId != null "> and tenant_id = #{tenantId}</if>
            <if test="employeeId != null "> and employee_id = #{employeeId}</if>
            <if test="message != null  and message != ''"> and message = #{message}</if>
            <if test="sentDate != null "> and sent_date = #{sentDate}</if>
            <if test="createdBy != null  and createdBy != ''"> and created_by = #{createdBy}</if>
            <if test="createdTime != null "> and created_time = #{createdTime}</if>
            <if test="lastModifiedBy != null  and lastModifiedBy != ''"> and last_modified_by = #{lastModifiedBy}</if>
            <if test="lastModifiedTime != null "> and last_modified_time = #{lastModifiedTime}</if>
        </where>
    </select>
    
    <select id="selectBizNotificationsById" parameterType="Long" resultMap="BizNotificationsResult">
        <include refid="selectBizNotificationsVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBizNotifications" parameterType="BizNotifications" useGeneratedKeys="true" keyProperty="id">
        insert into biz_notifications
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="tenantId != null">tenant_id,</if>
            <if test="employeeId != null">employee_id,</if>
            <if test="message != null">message,</if>
            <if test="sentDate != null">sent_date,</if>
            <if test="createdBy != null">created_by,</if>
            <if test="createdTime != null">created_time,</if>
            <if test="lastModifiedBy != null">last_modified_by,</if>
            <if test="lastModifiedTime != null">last_modified_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="tenantId != null">#{tenantId},</if>
            <if test="employeeId != null">#{employeeId},</if>
            <if test="message != null">#{message},</if>
            <if test="sentDate != null">#{sentDate},</if>
            <if test="createdBy != null">#{createdBy},</if>
            <if test="createdTime != null">#{createdTime},</if>
            <if test="lastModifiedBy != null">#{lastModifiedBy},</if>
            <if test="lastModifiedTime != null">#{lastModifiedTime},</if>
         </trim>
    </insert>

    <update id="updateBizNotifications" parameterType="BizNotifications">
        update biz_notifications
        <trim prefix="SET" suffixOverrides=",">
            <if test="tenantId != null">tenant_id = #{tenantId},</if>
            <if test="employeeId != null">employee_id = #{employeeId},</if>
            <if test="message != null">message = #{message},</if>
            <if test="sentDate != null">sent_date = #{sentDate},</if>
            <if test="createdBy != null">created_by = #{createdBy},</if>
            <if test="createdTime != null">created_time = #{createdTime},</if>
            <if test="lastModifiedBy != null">last_modified_by = #{lastModifiedBy},</if>
            <if test="lastModifiedTime != null">last_modified_time = #{lastModifiedTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBizNotificationsById" parameterType="Long">
        delete from biz_notifications where id = #{id}
    </delete>

    <delete id="deleteBizNotificationsByIds" parameterType="String">
        delete from biz_notifications where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>